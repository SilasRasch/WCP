@page "/"

<PageTitle>Home</PageTitle>

<div class="">
    <div class="text-lg my-2">
        <h2>Welcome to WCP Admin Panel</h2>
    </div>
    <div class="">
        <div class="">
            <div class="border-1 rounded-lg border-gray-500 p-2">
                <AuthorizeView>
                    <NotAuthorized>
                        <span>You are not logged in. Please <a class="underline" href="/login">click here</a> to login</span>
                    </NotAuthorized>
                    <Authorized>
                        <span>Logged in as <b>@context.User.Identity.Name</b>. <a class="fw-bolder" href="/logout">Click here</a> to logout</span>
                    </Authorized>
                </AuthorizeView>
            </div>
        </div>
    </div>
</div>